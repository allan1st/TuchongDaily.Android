<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_darker</item>
		<item name="android:windowActivityTransitions">true</item>
		<item name="android:windowContentTransitions">true</item>
	</style>


	<style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_darker</item>
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowActivityTransitions">true</item>
		<item name="android:windowContentTransitions">true</item>
	</style>

	<style name="AppTheme.Toolbar.TranslucentStatus" parent="AppTheme.Toolbar">
		<item name="android:windowTranslucentStatus">true</item>
	</style>

	<style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="colorControlActivated">@color/white</item>
		<item name="android:textCursorDrawable">@null</item>
	</style>

</resources>
