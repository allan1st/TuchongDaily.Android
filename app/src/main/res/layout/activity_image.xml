<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

	<ImageView
		android:id="@+id/image_view_image"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:adjustViewBounds="true"
		android:scaleType="fitXY"
		android:transitionName="@string/share_hero"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:orientation="vertical"
		android:paddingBottom="@dimen/space_medium"
		android:paddingLeft="@dimen/space_large"
		android:paddingRight="@dimen/space_large"
		android:paddingTop="@dimen/space_medium">

		<TextView
			android:id="@+id/text_image_camera_info"
			style="@style/TextAppearance.AppCompat.Body1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:ellipsize="end"
			android:maxLines="1"
			android:textColor="@color/white"
			android:textStyle="italic"
			tools:text="camera information"/>

		<TextView
			android:id="@+id/text_image_lens_info"
			style="@style/TextAppearance.AppCompat.Body1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:ellipsize="end"
			android:maxLines="1"
			android:textColor="@color/white"
			android:textStyle="italic"
			tools:text="lens information"/>

	</LinearLayout>

</RelativeLayout>